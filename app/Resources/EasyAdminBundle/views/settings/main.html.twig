{% block content_header %}
    <div class="row">
        <div class="col-sm-5">
            {% block content_title_wrapper %}
                <h1 class="title">{{ block('content_title') }}</h1>
            {% endblock %}
        </div>

        <div class="col-sm-7">
            <div class="global-actions">
                {% block global_actions %}

                {% endblock global_actions %}
            </div>
        </div>
    </div>
{% endblock content_header %}

{% block main %}
    <h2 class="col-md-offset-1">Настройки</h2><br>
    <form name="user" method="post" class="form-horizontal  edit-form">
        {% for key, el in elems  %}
            <div class="form-group  field-text"><label class="col-sm-3 control-label" for="{{ key }}">
                    {{ el.label ? el.label : key }}
                </label>
            {% set type = 'mail' in key ? 'email' : 'text' %}
            <div class="col-sm-9"><input id="{{ key }}" name="{{ key }}" class="form-control" value="{{ el.value }}" type="{{ type }}"></div>
            </div>
        {% endfor %}
        <div class="form-group buttons-row">
            <div class="col-sm-11 col-sm-offset-1 to_left">
                <button class="btn btn-green btn-lg btn-primary">Сохранить</button>
            </div>
        </div>
    </form>

    <style>
        .form-control {
            width: 88%;
        }

        .btn-green {
            /*background: lightgreen;*/
        }

        .to_left {

        }
    </style>
{% endblock main %}

