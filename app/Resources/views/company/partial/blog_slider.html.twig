<div class="slick-slider">
{% for post in posts %}

<div class="blog-element">
    <a href="{{ path('blog_view', {id: post.id}) }}">
        <span>{{ post.title }}</span><br>
        <span>
            {% if post.hasImage %}
                <img src="{{ asset(imageHelper.imageLink(post, 'small')) }}" alt="">
            {% else %}
                <span>There are no image</span>
            {% endif %}
        </span>
    </a>
</div>
{% endfor %}
</div>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js"></script>
<script>
    $('.slick-slider').slick({
        dots: false,
        infinite: true,
        speed: 300,
        slidesToShow: 3,
        slidesToScroll: 1,
        centerMode: true,
        centerPadding: 50,
        responsive: [
            {
                breakpoint: 1881,
                settings: {
                    slidesToShow: 3,
                    centerMode: false
                }
            },
            {
                breakpoint: 801,
                settings: {
                    slidesToShow: 1,
                    centerMode: true
                }
            }
        ]
    });
</script>