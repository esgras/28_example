    <section class="section-reviews border-radius-b-l">
        <div class="wrapper">
            <div class="reviews">
                <div class="reviews__head">
                    <p class="reviews__title">Отзывы принявших вызов</p>
                    <p class="reviews__subtitle">Впечатления и полезные советы
                        наших подписчиков по программе «28 дней»</p>

                    <div class="slider-nav"></div>
                </div>

                <div class="reviews__content slick-slider">

                    {% for feedback in feedbacks %}
                        <div class="reviews__card">

                            {% if feedback.imageFile %}
                                <img src="{{ asset(imageHelper.imageLink(feedback, 'normal')) }}"
                                     class="reviews__photo" alt="" title="">
                            {% elseif feedback.hasLinkPreview() %}
                                <img src="{{ feedback.linkPreview }}"
                                     class="reviews__photo" alt="" title="">
                            {% endif %}
                            <a href="{{ feedback.link }}"
                               data-fancybox="images">
                                <button class="reviews__play"></button>
                            </a>

                            <div class="reviews__card-info">
                                <p class="reviews__card-name">{{ feedback.authorName }}</p>
                                <p class="reviews__card-text">{{ feedback.text }}</p>
                                <time class="reviews__card-time">{{ feedback.timeText }}
                                    мин
                                </time>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

    <section class="section-faq">
        <div class="wrapper">
            <div class="faq">
                <div class="faq__head">
                    <p class="faq__title">Частые вопросы</p>

                    <div class="slider-nav"></div>
                </div>

                <div class="faq__content slick-slider">
                    {% for commonQuestion in commonQuestions %}
                        <div class="faq__box">
                            <div class="faq__caption">{{ commonQuestion.title }}
                            </div>
                            {#<div class="faq__text">{{ commonQuestion.text }}#}
                            <div class="faq__text">
                                <div class="faq__text__all">{{ commonQuestion.previewText }}</div>
                                {% if commonQuestion.showMoreText %}
                                    <div style="text-align: right">
                                        <a class="more-button">Показать все
                                        </a>
                                        <span class="last-text hidden">{{ commonQuestion.lastText }}</span>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}

                </div>
            </div>
        </div>
    </section>

    {#{% if not app.user %}#}
    <section class="section-tariff" id="section-tariff">
        <div class="wrapper">
            <div class="tariff">
                <div class="tariff__head">
                    <p class="tariff__title">Стоимость курса</p>
                    <p class="tariff__subtitle-description">После оплаты
                        курса вы получаете
                        доступ к личному кабинету</p>
                </div>

                <div class="tariff__content">
                    {% for product in products %}
                        <div class="tariff__box {% if not product.isProductActive() %}tariff__box_disabled{% endif %}">
                            <div class="tariff__box-top">
                                <p class="tariff__caption">{{ product.name }}</p>
                                <p class="tariff__text">{{ product.text|nl2br }}</p>
                            </div>
                            <p class="tariff__price">
                                <strong>{{ product.getPriceText(discount) }}</strong>
                            </p>
                            {% set url = product.isProductActive() ?  path('order_main', {id: product.id})  : '#' %}
                            <a href="{{ url }}" data-id="{{ product.id }}"
                               data-title="{{ product.name }}"
                               class="tariff__button {% if not product.isProductActive() %}disabled-button{% endif %}">выбрать</a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
    {#{% endif %}#}
    {% if not app.user %}
        {% include 'partial/payment_modal.html.twig' %}
    {% else %}
        {% include 'partial/modals/payment_modal_for_register.html.twig' %}
