<script>
    $(window).load(function () {
//        if (/Android|webOS|iPhone|iPad|iPod|BlackBerry/i.test(navigator.userAgent)) {
//            $('body').addClass('ios');
//        } else {
//            $('body').addClass('web');
//        }
//
//        $('body').removeClass('loaded');

        $('.login-hint__slider').slick({
            arrows: false,
            dots: true,
            slidesToShow: 1,
            slidesToScroll: 1,
            autoplay: true,
            autoplaySpeed: 5000
        });

        $('.login-form__input').on('input', function(e) {
            let val = $(this).val();

            if (!val.length) {
                $(this).removeClass('filled');
            } else {
                $(this).addClass('filled');
            }
        });

        setTimeout(function() {
            $('input:-webkit-autofill').addClass('filled');
        }, 600);

    });


</script>
</body>
</html>